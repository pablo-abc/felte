{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "ES2015",
    "types": ["@testing-library/jest-dom"],
    "lib": ["ES2019", "dom"],
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
