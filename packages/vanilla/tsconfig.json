{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "ES2015",
    "lib": ["ES2019", "dom"],
    "useDefineForClassFields": false,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "declarationDir": "./dist/types"
  },
  "include": ["./src", "./tests"]
}
