{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/esm"
  },
  "include": ["src", "test"],
  "exclude": ["test"]
}
