{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "types": ["@testing-library/jest-dom"],
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "declarationDir": "./dist/esm"
  },
  "include": ["./src", "./tests"],
  "exclude": ["./tests"]
}
