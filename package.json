{
  "name": "root",
  "private": true,
  "scripts": {
    "docs:build": "pnpm -r --filter='felte' docs:build",
    "site:build": "pnpm -r --filter='@felte/site' build",
    "site:preview": "pnpm -r --filter='@felte/site' preview",
    "site:dev": "pnpm -r --filter='@felte/site' dev",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "lint": "eslint packages --max-warnings=0 --ignore-pattern *packages/site*",
    "build": "pnpm -r --filter='!@felte/site' --filter='!@example/*' build",
    "dev": "pnpm -r --parallel --filter='!@felte/site' --filter='!@example/*' dev",
    "prepare": "husky install",
    "publish": "pnpm i && pnpm lint && pnpm -r publish"
  },
  "devDependencies": {
