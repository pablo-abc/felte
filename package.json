    "tippy.js": "^6.0.0",
    "tslib": "^2.3.1",
    "tsm": "^2.2.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3",
    "uvu-expect": "^0.5.0",
    "uvu-expect-dom": "^0.2.4",
    "vest": "^4.0.1",
    "yup": "^0.32.9",
